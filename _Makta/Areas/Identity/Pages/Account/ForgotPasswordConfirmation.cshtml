@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}


@*<h1>@ViewData["Title"]</h1>
<p>
    Please check your email to reset your password.
</p>*@



<div class="row" style="justify-content: center; align-content: center; position: absolute; top: 0; bottom: 0; left: 0; right: 0 ">
    <div class="col-md-9 col-xs-12" id="loginPartial" style="display: flex; margin-right: auto; margin-left: auto; flex-direction: column;">
        <div class="row col-md-7 col-xs-12" style="flex: 1 1 auto; margin: auto">


            <br>
            <div class="row" style="justify-content: center; align-content: center">
                <div class="login-backdrop col-12" style="display: flex; align-items: center; justify-content: center;">
                    <section style="width: 80%">
                        <h1>Reset email sent.</h1>
                        <p>
                            Please check your email to reset your password.
                        </p>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>



<style>
    @@media only screen and (max-width: 1010px) {
        .login-backdrop {
            height: 100%;
            width: 100%;
            padding: 0;
        }
    }
    @@media only screen and (min-width: 1010px) {
        .login-backdrop {
            @*height: 100%;
            width: 100%;
            padding: 0;*@
            max-width: 500px;
            background-color: white;
            border-radius: 50px;
            padding: 75px 0;
            -webkit-box-shadow: 0px 5px 20px 2px rgba(0,0,0,0.25);
            -moz-box-shadow: 0px 5px 20px 2px rgba(0,0,0,0.25);
            box-shadow: 0px 5px 20px 2px rgba(0,0,0,0.25);
        }
    }

</style>