@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row" style="justify-content: center; align-content: center; position: absolute; top: 0; bottom: 0; left: 0; right: 0 ">
    <div class="col-md-9 col-xs-12" id="loginPartial" style="display: flex; margin-right: auto; margin-left: auto; flex-direction: column;">
        <div class="row col-md-7 col-xs-12" style="flex: 1 1 auto; margin: auto">


            <br>
            <div class="row" style="justify-content: center; align-content: center">
                <div class="login-backdrop col-12" style="display: flex; align-items: center; justify-content: center;">
                    <section style="width: 80%">
                        <form method="post">
                            <h4 style="text-align: center">Forgot your password?</h4>
                            <hr />
                            <div class="form-group">
                                <label>Enter your email</label>
                                <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="row form-group">
                                <button type="submit" class="login-button col-7">Submit</button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    const email = urlParams.get('email');
    document.getElementById('Input_Email').value = email;
</script>

<style>
    @@media only screen and (max-width: 1010px) {
        .login-backdrop {
            height: 100%;
            width: 100%;
            padding: 0;
        }
    }
    @@media only screen and (min-width: 1010px) {
        .login-backdrop {
            @*height: 100%;
            width: 100%;
            padding: 0;*@
            max-width: 500px;
            background-color: white;
            border-radius: 50px;
            padding: 75px 0;
            -webkit-box-shadow: 0px 5px 20px 2px rgba(0,0,0,0.25);
            -moz-box-shadow: 0px 5px 20px 2px rgba(0,0,0,0.25);
            box-shadow: 0px 5px 20px 2px rgba(0,0,0,0.25);
        }
    }

    .info-input {
        display: block;
        border-radius: 100px;
        border-color: #777777;
        border-style: solid;
        border-width: 1px;
        background-color: white;
        color: #5D5D5D;
        height: 45px;
        width: 100%;
        padding: 15px;
    }

        .info-input:focus {
            border-color: #0CABE2;
            /* border-width: 2px; */
            outline: none;
        }

    .login-button {
        border: none;
        height: 20%;
        min-height: 60px;
        border-radius: 20px;
        background-color: #0CABE2;
        color: white;
        font-size: 20px;
        font-weight: bold;
        width: 100%;
        z-index: 0;
        transition: 0.2s;
        margin: 10px auto;
    }

        .login-button.new-user {
            border: 1px solid #0CABE2;
            background-color: white;
            color: #0CABE2;
        }

        .login-button:hover {
            @*background-color: #097094;*@
        }

        .login-button.new-user:hover {
            @*background-color: #FBFBFB;*@
        }

        .login-button.new-user:focus {
            outline: none;
        }

        .login-button:focus {
            outline: none;
        }
</style>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
